<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
    namespace="ITU.RefereeAssistant.Domain.Models" assembly="ITU.RefereeAssistant.Domain">

  <class name="Round" table="Round">

    <id name="Id">
      <generator class="native" />
    </id>
    <property name="OrderNum"/>
    <set name="Matches" table="Match" lazy="false" cascade ="all-delete-orphan" inverse="true" fetch="select">
      <key>
        <column name="Round" not-null="true" />
      </key>
      <one-to-many class="Match" />      
    </set>
    <many-to-one name="Tournament" class="Tournament" />
  </class>

</hibernate-mapping>
